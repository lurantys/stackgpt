{
  "manifest_version": 3,
  "name": "StackGPT - Save Snippets on ChatGPT",
  "version": "0.1",
  "description": "Save and manage chat snippets in a sidebar that matches ChatGPT's UI.",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
    
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 